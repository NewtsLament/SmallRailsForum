<p style="color: red"><%= alert %></p>

<%= form_with(url: identity_role_path, method: :patch) do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.collection_select(:role, User::ROLES, :to_s, lambda{|i| i.to_s.humanize},prompt: Current.user.role.humanize) %>

  <div>
    <%= form.submit "Save changes" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back", root_path %>
</div>
