<p style="color: red"><%= alert %></p>

<%= form_with(url: identity_nickname_path, method: :patch) do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nickname, "New nickname", style: "display: block" %>
    <%= form.text_field :nickname, required: true, autofocus: true %>
  </div>

  <div>
    <%= form.label :current_password, style: "display: block" %>
    <%= form.password_field :current_password, required: true, autocomplete: "current-password" %>
  </div>

  <div>
    <%= form.submit "Save changes" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back", root_path %>
</div>
